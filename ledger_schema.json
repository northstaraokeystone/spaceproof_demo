{
  "hash_strategy": {
    "algorithm": ["SHA256", "BLAKE3"],
    "format": "sha256:blake3",
    "description": "Dual-hash for cryptographic integrity"
  },
  "receipt_types": {
    "demo_init": {
      "description": "Emitted when demo initializes",
      "required_fields": {
        "ts": "ISO8601",
        "version": "string",
        "mode": "string",
        "components_loaded": "integer",
        "payload_hash": "string:dual_hash"
      }
    },
    "terrestrial_verification": {
      "description": "Emitted for terrestrial mode verification",
      "required_fields": {
        "ts": "ISO8601",
        "component_id": "string",
        "entropy": "float",
        "confidence": "float",
        "noise_floor": "float",
        "payload_hash": "string:dual_hash"
      }
    },
    "orbital_verification": {
      "description": "Emitted for orbital mode verification with comparison",
      "required_fields": {
        "ts": "ISO8601",
        "component_id": "string",
        "component_type": "string",
        "entropy_terrestrial": "float",
        "entropy_orbital": "float",
        "confidence_terrestrial": "float",
        "confidence_orbital": "float",
        "noise_terrestrial": "float",
        "noise_orbital": "float",
        "verdict": "string",
        "thermal_baseline_orbital": "integer",
        "payload_hash": "string:dual_hash"
      }
    },
    "mode_switch": {
      "description": "Emitted when verification mode changes",
      "required_fields": {
        "ts": "ISO8601",
        "from": "string",
        "to": "string",
        "node_id": "string|null",
        "altitude_km": "integer|null",
        "payload_hash": "string:dual_hash"
      }
    },
    "location_proof": {
      "description": "Emitted for orbital location verification",
      "required_fields": {
        "ts": "ISO8601",
        "node_id": "string",
        "challenge": "string",
        "response": "string",
        "kepler_signature": "string",
        "light_delay_ms": "float",
        "altitude_km": "integer",
        "tee_attestation": "string",
        "verification_status": "string",
        "payload_hash": "string:dual_hash"
      }
    },
    "artifact_generation": {
      "description": "Emitted when verification artifact is generated",
      "required_fields": {
        "ts": "ISO8601",
        "artifact_type": "string",
        "component_id": "string",
        "verification_summary": "object",
        "roi_calculation": "object",
        "receipt_chain_length": "integer",
        "payload_hash": "string:dual_hash"
      }
    },
    "anchor": {
      "description": "Merkle anchor for receipt batching",
      "required_fields": {
        "ts": "ISO8601",
        "merkle_root": "string",
        "hash_algos": ["SHA256", "BLAKE3"],
        "batch_size": "integer",
        "payload_hash": "string:dual_hash"
      }
    },
    "demo_complete": {
      "description": "Emitted when demo sequence completes",
      "required_fields": {
        "ts": "ISO8601",
        "threats_detected": "integer",
        "components_verified": "integer",
        "receipts_emitted": "integer",
        "payload_hash": "string:dual_hash"
      }
    }
  },
  "slo_thresholds": {
    "entropy_genuine_threshold": 0.82,
    "entropy_counterfeit_upper": 0.78,
    "confidence_minimum": 0.5,
    "terrestrial_noise_floor": 0.08,
    "orbital_noise_floor": 0.01,
    "verification_rate_terrestrial": 1,
    "verification_rate_orbital": 10,
    "light_delay_max_ms": 10
  }
}
